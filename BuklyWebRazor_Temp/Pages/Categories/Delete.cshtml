@page
@model BuklyWebRazor_Temp.Pages.Categories.Delete




<form method="post">
    <input hidden asp-for="Category.Id"/>

    <div class="border p-3 mt-4">

        <div class="row pb-2">

            <h2 class="text-primary">Delete Category</h2>
            <hr/>
        </div>

        <div asp-validation-summary="ModelOnly"></div>

        <div class="mb-3 row p-1">

            <label class="p-0" asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" disabled/>

        </div>


        <div class="mb-3 row p-1">

            <label class="p-0" asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" disabled/>

        </div>

        <div class="row">

            <div class="col-6 col-md-3"> <button type="submit" class="btn btn-danger form-control">Delete</button></div>
            <div class="col-6 col-md-3"> <a class="btn btn-secondary btn-outline-secondary form-control" asp-page="/categories/index">Back to List</a></div>
        </div>


    </div>
</form>

@section Scripts
{


    <partial name="_ValidationScriptsPartial"/>


}